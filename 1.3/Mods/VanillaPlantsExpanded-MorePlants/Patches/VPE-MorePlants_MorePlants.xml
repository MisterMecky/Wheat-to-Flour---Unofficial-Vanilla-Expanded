<Patch>
    <Operation Class="PatchOperationSequence">
        <operations>

            <!-- VCE_Oats -->
            
            <li Class="PatchOperationReplace">
                <xpath>Defs/ThingDef[defName="VCE_Oats"]/plant/harvestedThingDef</xpath>
                <value>
                    <harvestedThingDef>VCE_RawOats</harvestedThingDef>
                </value>
            </li>

            <li Class="PatchOperationReplace">
                <xpath>Defs/ThingDef[defName="VCE_Oats"]/plant/harvestYield</xpath>
                <value>
                    <harvestYield>30</harvestYield>
                </value>
            </li>

            <li Class="PatchOperationRemove">
                <xpath>Defs/ThingDef[defName="VCE_Oats"]/modExtensions/li[@Class="VanillaPlantsExpanded.DualCropExtension"]</xpath>
            </li>

            <!-- VCE_Rye -->

            <li Class="PatchOperationReplace">
                <xpath>Defs/ThingDef[defName="VCE_Rye"]/plant/harvestedThingDef</xpath>
                <value>
                    <harvestedThingDef>MKY_RawRye</harvestedThingDef>
                </value>
            </li>

            <!-- VCE_Sorghum -->

            <li Class="PatchOperationReplace">
                <xpath>Defs/ThingDef[defName="VCE_Sorghum"]/plant/harvestedThingDef</xpath>
                <value>
                    <harvestedThingDef>MKY_RawSorghum</harvestedThingDef>
                </value>
            </li>

            <!-- VCE_Barley -->

            <li Class="PatchOperationReplace">
                <xpath>Defs/ThingDef[defName="VCE_Barley"]/plant/harvestedThingDef</xpath>
                <value>
                    <harvestedThingDef>MKY_RawBarley</harvestedThingDef>
                </value>
            </li>

        </operations>
    </Operation>
</Patch>