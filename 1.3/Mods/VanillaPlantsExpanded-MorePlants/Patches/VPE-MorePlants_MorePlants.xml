<Patch>
    <Operation Class="PatchOperationSequence">
        <operations>

            <!-- VCE_Oats -->
            
            <li Class="PatchOperationReplace">
                <xpath>Defs/ThingDef[defName="VCE_Oats"]/plant/harvestedThingDef</xpath>
                <value>
                    <harvestedThingDef>VCE_RawOats</harvestedThingDef>
                </value>
            </li>

            <li Class="PatchOperationReplace">
                <xpath>Defs/ThingDef[defName="VCE_Oats"]/plant/harvestYield</xpath>
                <value>
                    <harvestYield>20</harvestYield>
                </value>
            </li>

            <li Class="PatchOperationRemove">
                <xpath>Defs/ThingDef[defName="VCE_Oats"]/modExtensions/li[@Class="VanillaPlantsExpanded.DualCropExtension"]</xpath>
            </li>

